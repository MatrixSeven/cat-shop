
.popup_show {
    display: flex;
    padding: 2vh;
    box-shadow: 0 0 5px #d0d0d0;
    border-bottom-color: #999999;
    width: 50vw;
    height: 35vh;
    border-radius: 2vh 2vh 2vh 2vh;
}

.buy_plan {
    display: flex;
    width: 80vw;
    height: 40vh;
    flex-wrap: wrap;
    justify-content: center;
}

.buy_title {
    display: flex;
    color: white;
    text-align: center;
    justify-content: center;
    align-items: center;
    background-color: #dd514c;
    width: 100%;
    height: 15%;
}

.buy_ling {
    display: flex;
    width: 80%;
    height: 35%;
    margin-top: 1vh;
    border-width: thin;
    border-style: dashed;
    border-color: #dd514c;
    border-bottom-style: dot-dash;
}

.buy_button {
    width: max-content;
    color: white;
    font-size: x-large;
    height: min-content;
    text-align: center;
    align-items: center;
    justify-content: center;
    display: flex;
    border-radius: 2vh 2vh 2vh 2vh;
    margin-top: 2vh;
    background-color: #dd514c;
}

.buy_button_text {
    width: max-content;
    color: gray;
    font-size: x-small;
    height: min-content;
    text-align: center;
    align-items: center;
    justify-content: center;
    display: flex;
    align-self: center;
    margin-top: 1vh;
}

.buy_step {
    display: flex;
    width: 100%;
    height: auto;
}

.page {

    padding-bottom: 20vh;
}
.page::after {
    width: 100vw;
    height: 25vh;
    overflow: hidden;
    position: absolute;
    left: 0;
    top: 0;
    z-index: -1;
    content: "";
    border-radius: 0 0 50% 50%;
    /* background: linear-gradient(#dd514c, #ffffff 80%); */
    background-color: #dd514c;
}

