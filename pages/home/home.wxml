<view class="all_page">
    <view class="page_info">
        <view class="person_logo">
            <van-image wx:if="{{isLogin}}"
                       round
                       width="5rem"
                       height="5rem"
                       widthFix
                       src="https://img.yzcdn.cn/vant/cat.jpeg"
            />
            <open-data wx:elif="{{!isLogin}}" type="userAvatarUrl"></open-data>


        </view>
        <view wx:if="{{isLogin}}" class="person_name">1234543电风扇</view>
        <van-button class="person_name" wx:elif="{{!isLogin}}" open-type="getUserInfo" plain type="primary">点击登录</van-button>
<!--        <open-data class="person_name" wx:if="{{!isLogin}}" type="userNickName"></open-data>-->

    </view>
    <view class="page_list">
        <van-cell-group style="width:100%">
            <van-cell icon="location-o" title="我的订阅" is-link style="width:100%;height:150%"/>
            <van-cell icon="smile-comment-o" title="联系我" is-link style="width:100%;height:150%"/>
            <van-cell icon="share-o" title="分享给好友" is-link style="width:100%;height:150%"/>
            <van-cell icon="smile-o" title="关于" is-link style="width:100%;height:150%"/>
        </van-cell-group>
    </view>
</view>