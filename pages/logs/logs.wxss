.all_page {
    display: flex;
    justify-content: flex-start;
    width: 100vw;
    flex-wrap: wrap;
}

.search_near {
    margin-left: 3vw;
    width: 90vw;
    display: flex;
    justify-content: flex-start;
    justify-items: flex-start;
    color: #aaaaaa;
}

.search_near_tag {
    margin-left: 1vh;
    margin-top: 1vh;
}



.info_view_card {
    display: flex;
    width: 45%;
    border-radius: 1vh;
    box-shadow: 0 0 5px #d0d0d0
}

.card-view {
    margin-top: 2vh;
    display: flex;
    width: 95vw;
    align-content: center;
    justify-content: center;
    align-items: center;
    align-self: center;
    flex-wrap: wrap;
    /*background-color: darkgrey;*/
    box-shadow: 0 0 15px #d0d0d0
}

.pic-price-view {
    display: flex;
    flex-wrap: wrap;
    width: 100vh;
}

.pic-view {
    display: flex;
    width: 30%;
}


.text-view {
    margin-left: 10%;
    display: flex;
    flex-wrap: wrap;
    width: 60%;
    align-items: flex-end;
}

.divLine {
    background: #E0E3DA;
    width: 100%;
    height: 5rpx;
    text-align: left;
    color: #aaa;
}

.foot {
    margin: 1vh;
    display: flex;
    flex-wrap: wrap;
    width: 100vh;
    font-size: smaller;
}